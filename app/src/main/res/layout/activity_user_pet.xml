<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserPet">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_pets"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/teal_200"
        app:title="Your Pets For Donation"
        app:titleTextColor="@color/white" />
    <TextView
        android:id="@+id/textView_rule"
        android:layout_below="@+id/toolbar_pets"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="8dp"
        android:background="@color/teal_200"
        android:text="Once your pet is adopted, you have to delete it!"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_pets1"
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textView_rule" />

</RelativeLayout>